          i.circular.paper.plane.icon
          |           SignUp
        form#signup_form.ui.form
          .field
            label Username
            input#username_signup(type='text', name='username', value='', placeholder='Username', required='')
          .field
            label Email
            input#email_signup(type='text', name='email', value='', placeholder='Email Address', required='')
          .field
            label Password
            input#password_signup(type='password', name='password', value='', placeholder='Password', required='')
          input#signup_submit.ui.submit.button(type='button', value='submit')
          .ui.error.message
